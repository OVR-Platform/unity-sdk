
/* Variables that can be overridden to change the look 'n feel of a graph */

/* #bluegraph-canvas { 

    Cannot cascade these variables to support 2019.3.7
    See: https://forum.unity.com/threads/solved-uss-variables-getting-corrupted.824145/
    This bug also affects -unity-background-image-tint-color
    for PortView.uss type-is-collection > #connector.

    Seems to be fixed in 2020.1.3, and possibly earlier.
*/


* {
    /* Background grid display configurations */
    --bluegraph-grid-background-color:              #202b3c;
    --bluegraph-grid-line-color:                    #283042;
    --bluegraph-grid-thick-line-color:              #3a455e;

    /* Highlighting for selected edges/nodes */
    --bluegraph-focus-color:                        #006798;        
    --bluegraph-highlight-color:                    #ffd244;

    /* Node settings */
    --bluegraph-node-title-background-color:        #3b4c64;
    --bluegraph-node-title-color:                   #efefef;
    --bluegraph-node-inputs-background-color:       #393a40;
    --bluegraph-node-outputs-background-color:      #232932;
    --bluegraph-node-editables-background-color:    #3f3f3f;
    --bluegraph-node-error-color:                   #D81619;

    /* Port settings */
    --bluegraph-port-title-color:                   #c1c1c1;
    --bluegraph-port-background-color:              #212121;

    /* Property field associated with an input port */
    --bluegraph-port-field-background-color:        rgba(0, 0, 0, 0.25);
    --bluegraph-port-field-border-color:            #666666;
    --bluegraph-port-field-color:                   #eeeeee;

    /* Colors for different port data types */

    /* Unknown object types or value types */
    --bluegraph-port-object-color:                  #18abf2;
    --bluegraph-port-value-color:                   #4eaeae;

    /* Standard C# types */
    --bluegraph-port-string-color:                  #fb02d1;
    --bluegraph-port-boolean-color:                 #d9000c;
    --bluegraph-port-int-color:                     #29e0ad;
    --bluegraph-port-float-color:                   #9efb52;
    --bluegraph-port-enum-color:                    #076f64;

    /* Common Unity types */
    --bluegraph-port-vector-color:                  #fdc727;
    --bluegraph-port-quaternion-color:              #8f9fdd;
    --bluegraph-port-color-color:                   #bebebe;
    --bluegraph-port-transform-color:               #fa711d;
    --bluegraph-port-gameobject-color:              #ab60ff;

    --bluegraph-port-rigidbody-color:               #ffffff;
    --bluegraph-port-renderer-color:                #b55353;
    --bluegraph-port-light-color:                   #b8f0ad;
    --bluegraph-port-audiosource-color:             #9c8a30;
    --bluegraph-port-videoplayer-color:             #d17a1d;
    --bluegraph-port-animator-color:                #500555;
    --bluegraph-port-button-color:                  #442c64;
    --bluegraph-port-text-color:                    #176f00;
    --bluegraph-port-image-color:                   #176e51;

    --bluegraph-port-generic-color:                 #ffffff;

    --bluegraph-port-executionflow-color:           #ffffff;
}

/*  
    Custom type classes to automatically generate a type color variable 
    if someone is using Type.toUSSClasses() on a visual element.
*/
.type-is-object {
    /*--type-color: var(--bluegraph-port-object-color);*/
    --type-color: var(--bluegraph-port-generic-color);
}

.type-is-value {
    /*--type-color: var(--bluegraph-port-value-color);*/
    --type-color: var(--bluegraph-port-generic-color);
}

.type-is-enum {
    /*--type-color: var(--bluegraph-port-enum-color);*/
    --type-color: var(--bluegraph-port-generic-color);
}

